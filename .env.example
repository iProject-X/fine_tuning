# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///uzbek_asr.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/uzbek_asr

# Storage Configuration
STORAGE_PATH=./data/telegram

# Bot Configuration
MAX_AUDIO_DURATION=60
MIN_AUDIO_DURATION=2
POINTS_PER_AUDIO=100
POINTS_PER_TRANSCRIPTION=50
POINTS_PER_VERIFICATION=25

# Quality Control
AUTO_APPROVE_THRESHOLD=0.95
MIN_VERIFICATIONS=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/telegram_bot.log

# Optional: For production deployment
WEBHOOK_URL=
WEBHOOK_PORT=8443
WEBHOOK_PATH=/webhook

# Optional: Redis for caching (if using Redis)
REDIS_URL=redis://localhost:6379/0

# Optional: Sentry for error tracking
SENTRY_DSN=